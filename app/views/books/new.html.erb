<div class="user info">
	<h2>User info</h2>
	<table class="table table-striped user-info-table">
		<tr>
			<th> name</th>
			<td><%= @user.name %></td>
		</tr>
		<tr>
			<th> introduction</th>
			<td>sample introduction</td>
		</tr>
	</table>
</div>

<%= form_for(@book, url:books_path) do |f| %>
<% if @book.errors.any? %>
<div id="error_explanation">
	<h2><%= @book.errors.count %>件のエラーが発生しました。</h2>
	<ul>
		<% @book.errors.full_messages.each do |message| %>
		<li><%= message %></li>
		<% end %>
	</ul>
</div>
<% end %>

<div class="new-book">
	<h2>New book</h2>
	<%= form_for(@book) do |f| %>
	<h4>Title</h4>
	<%= f.text_field :title %><br>
	<h4>Opinion</h4>
	<%= f.text_area :opinion %><br>
	<%= f.submit "Create book" %>
	<% end %>
</div>
<% end %>