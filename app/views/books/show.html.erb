<% if flash[:notice] %>
<p class="show-notice"><%= flash[:notice] %></p>
<% end %>

<div class="clearfix">




    <!-- 部分テンプレート -->

    <div class="main-side">
	<div class="user info">
		<h2>User info</h2>
		<table class="table table-striped user-info-table">

			<div><%= attachment_image_tag @user.user, :image, class: "profile-img2", fallback: "no_image.jpg" %></div>
			<div class="space1"></div>

			<tr>
				<th> name</th>
				<td><%= @user.user.name %></td>
			</tr>
			<tr>
				<th> introduction</th>
				<td><%= @user.user.introduct %></td>
			</tr>
		</table>
		<% if @user.user == current_user %>
		<%=link_to "", edit_user_path(@user), class:"glyphicon glyphicon-wrench field-size btn btn-default edit_user_#{@user.id}" %>
		<% else %>
		<%=link_to "", user_path(current_user.id), class:"glyphicon glyphicon-wrench field-size btn btn-default edit_user_#{@user.id}" %>
		<% end %>
	</div>



	<div class="new-book">
		<%= form_for(@book) do |f| %>
		<h2>New book</h2>
		<h4>Title</h4>
		<%= f.text_field :title, class:"field-size" %><br>
		<h4>Opinion</h4>
		<%= f.text_area :opinion, class:"field-size" %><br>
		<%= f.submit "Create book", class:"field-size btn btn-primary" %>
		<% end %>
	</div>

</div>

<!-- 終わり -->

	<div class="book-show">
		<h2> Books detail</h2>

		<div class="table">
			<table class="table table-striped user-info-table">
				<tr>
					<th></th>
					<th> Tilte</th>
					<th> Opinion</th>
					<th colspan="2"></th>
				</tr>
				<tr>
					<td><%= attachment_image_tag @showbook.user, :image, class:"profile-img", fallback: "no_image.jpg" %><br>
						<span>  <%= @showbook.user.name %></span>
					</td>
					<td><%= @showbook.title %></td>
					<td><%= @showbook.opinion %></td>
					<% if @showbook.user == current_user %>
					<td><%=link_to "Edit", edit_book_path(@showbook), class:"btn btn-success btn-xs edit_book_#{@showbook.id}" %></td>
					<td><%= link_to "Destroy", book_path(@showbook), method: :delete, class:"btn btn-danger btn-xs destroy_book_#{@showbook.id}", "data-confirm" => "本当に消しますか？" %>
					</td>
					<% end %>
				</tr>
			</table>
		</div>
	</div>
</div>