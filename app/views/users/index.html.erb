<div class="clearfix">
	<div class="main-side">

		<div class="user info">
			<h2>User info</h2>
			<table class="table table-striped user-info-table">
				<div><%= attachment_image_tag @user, :image, class: "profile-img2", fallback: "no_image.jpg" %></div>
				<div class="space1"></div>
				<tr>
					<th> name</th>
					<td><%= @user.name %></td>
				</tr>
				<tr>
					<th> introduction</th>
					<td><%= @user.introduct %></td>
				</tr>
			</table>
			<%=link_to "", edit_user_path(@user), class:"glyphicon glyphicon-wrench field-size btn btn-default edit_user_#{@user.id}" %>
		</div>

		<%= form_for(@book, url:books_path) do |f| %>
		<% if @book.errors.any? %>
		<div id="error_explanation">
			<h2><%= @book.errors.count %>件のエラーが発生しました。</h2>
			<ul>
				<% @book.errors.full_messages.each do |message| %>
				<li><%= message %></li>
				<% end %>
			</ul>
		</div>
		<% end %>

		<div class="new-book">
			<h2>New book</h2>
			<%= form_for(@book) do |f| %>
			<h4>Title</h4>
			<%= f.text_field :title, class:"field-size" %><br>
			<h4>Opinion</h4>
			<%= f.text_area :opinion, class:"field-size" %><br>
			<%= f.submit "Create book", class:"field-size btn btn-primary" %>
			<% end %>
		</div>
		<% end %>

	</div>

	<div class="user-index">
		<h2>Users</h2>
		<div class="table">
			<table class="table table-striped">
				<tr>
					<th> image</th>
					<th> name</th>
					<th></th>
				</tr>
				<% @users.each do |user| %>
				<tr>
					<th><%= attachment_image_tag user, :image, class: "profile-img", fallback: "no_image.jpg" %></th>
					<th><%= user.name %></th>
					<th><%=link_to "Show", user_path(user), class: "user_#{user.id}" %></th>
				</tr>
				<% end %>
			</table>
		</div>
	</div>
